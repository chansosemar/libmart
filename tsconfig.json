{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "types": ["node"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./app/*"],
      "@modules": ["./app/modules"],
      "@modules/*": ["./app/modules/*"],
      "@styles": ["./app/styles"],
      "@styles/*": ["./app/styles/*"],
      "@components": ["./app/components"],
      "@components/*": ["./app/components/*"],
      "@assets": ["./app/assets"],
      "@assets/*": ["./app/assets/*"],
      "@router": ["./app/router"],
      "@router/*": ["./app/router/*"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
